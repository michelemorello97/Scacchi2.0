pericolo(X,Y):-moveE(_,_,_,X,Y).

move("pedone",I,"bianco",X,4):-pezzo("pedone",I,"bianco",X,6),not occupata(X,4),not occupata(X,5).
move("pedone",I,"bianco",X,Y):-pezzo("pedone",I,"bianco",X,Z),Y=Z-1, not occupata(X,Y), Y>=0.
