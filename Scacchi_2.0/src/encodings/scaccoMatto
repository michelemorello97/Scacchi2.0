%PER CALCOLARMI I MOIMENTI IN BASE AI NEAR, PRIMA VERTICALE E POI ORIZZONTALE
move("torre",I,"bianco",X,Y):-pezzo("torre",I,"bianco",X,B), nearV(X,Y), B!=Y.
move("torre",I,"bianco",X,Y):-pezzo("torre",I,"bianco",A,Y), nearO(X,Y), A!=X.

%CALCOLO DEI NEAR ORIZZONTALI
nearO(X,Y):-pezzo("torre",I,"bianco",X,Y).
nearO(X,Y):-nearO(A,Y),X=A+1, not nemico(A,Y), not alleato(X,Y), X<8.
nearO(X,Y):-nearO(A,Y),X=A-1, not nemico(A,Y), not alleato(X,Y) ,X>=0.

%CALCOLO DEI NEAR VERTICALI
nearV(X,Y):-pezzo("torre",I,"bianco",X,Y).
nearV(X,Y):-nearV(X,A),Y=A+1, not nemico(X,A) , not alleato(X,Y), Y<8.
nearV(X,Y):-nearV(X,A),Y=A-1, not nemico(X,A) , not alleato(X,Y), Y>=0.


move("alfiere",I,"bianco",X,Y):-pezzo("alfiere",I,"bianco",A,B), diagonaleP(X,Y), A!=X, B!=Y.
move("alfiere",I,"bianco",X,Y):-pezzo("alfiere",I,"bianco",A,B), diagonaleS(X,Y), A!=X, B!=Y.


diagonaleP(X,Y):-pezzo("alfiere",I,"bianco",X,Y).
diagonaleP(X,Y):-diagonaleP(A,B), not alleato(X,Y), not nemico(A,B), X=A+1, Y=B+1, X<8, Y<8.
diagonaleP(X,Y):-diagonaleP(A,B), not alleato(X,Y), not nemico(A,B), X=A-1, Y=B-1, X>=0, Y>=0.

diagonaleS(X,Y):-pezzo("alfiere",I,"bianco",X,Y).
diagonaleS(X,Y):-diagonaleS(A,B), not alleato(X,Y), not nemico(A,B), X=A+1, Y=B-1, X<8, Y>=0.
diagonaleS(X,Y):-diagonaleS(A,B), not alleato(X,Y), not nemico(A,B), X=A-1, Y=B+1, Y<8, X>=0.


move("cavallo",I,"bianco",X,Y):-near(X,Y), pezzo("cavallo",I,"bianco",_,_).

%GENERO I NEAR
near(X,Y):-pezzo("cavallo",I,"bianco",A,B), not alleato(X,Y), X=A-1,Y=B-2, X>=0, Y>=0.
near(X,Y):-pezzo("cavallo",I,"bianco",A,B), not alleato(X,Y), X=A+1,Y=B-2, X<8, Y>=0.
near(X,Y):-pezzo("cavallo",I,"bianco",A,B), not alleato(X,Y), X=A-1,Y=B+2, X>=0, Y<8.
